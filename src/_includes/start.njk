{% extends "page.njk" %}

{% block content %}

  <h1>
    <span class="big_text">{{ title }}</span>
    <br>
    <span class="subtitle"> {{subtitle}}</span> 
  </h1>
  <div class="content_container">
    <div class="page_content flow">
      {{ content | safe }} 
      {% include "partials/divider.njk" %}
    
      {# shows the latest article #}
      {% set postslist = collections.posts | head(-1) %}
        {%- for post in postslist -%}
            {% include "partials/postpreview.njk" %}
        {%- endfor -%}
      
      <a href="/articles/">More from the log</a>
      
      {% include "partials/divider.njk" %}

      {# shows the latest typespecimen #}
      {% set typelist = collections.typefaces | head(-1) %}
        {%- for post in typelist -%}
          {% include "partials/typepreview.njk" %}
        {%- endfor -%}
      
      <a href="/articles_typetester/">More type</a>
      {#{{ postslist[0].templateContent | safe }}#}
  

    </div>
  </div>



{% endblock %}