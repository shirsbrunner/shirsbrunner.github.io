{% include "partials/htmlhead.njk" %}

<header>
  
  <nav class="nav_top">
    <a href="/">
    <img class="logo" src="/images/structural/Logo_48.png" alt="Logo of the page showing the Hirschlbrummbaer" width="48" height="48">
    </a>
    {% navlist collections.all | eleventyNavigation, page, 1 %}
  </nav>
</header>


<main>
{% block content %}

  <p class="big_text">{{ title }}</p>
  <h1 class="subtitle"> {{subtitle}} </h1>
  <div class="content_container">
    <div class="page_content">
      {{ content | safe }} 
      {% if pagelist %}
        {% include "partials/pagelist.njk" %}
      {% endif %}
    </div>
  </div>
{% endblock %}
</main>



